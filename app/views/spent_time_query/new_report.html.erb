<h2 id="spent_time_header"> <%= l(:saved_spent_time_query) %></h2>

<%= form_tag() do %>

<div class="box">
	<div class="tabular">
		<p>
			<label for="query_name"><%= l(:spent_time_query_name) %></label>
			<input id="query_new_name" name="query[new_name]" size="80" type="text" value="" />
			<% if !@current_query.nil? %>
			<%= hidden_field(:query, :name, :value => "#{@current_query.name}") %>
			<% end %>
		</p>
		
		<p>
			<label for="query_is_public"><%= l(:public) %></label>
			<input name="query[is_public]" type="hidden" value="0" />
			<input id="query_is_public" name="query[is_public]" type="checkbox" value="1" />
		</p>
		
		<input name="query[type]" type="hidden" value="report" />
		<input name="query[project]" type="hidden" value="<%= @project_id %>" />
		<input name="query[value]" type="hidden" value="<%= CGI.unescape(request.query_string) %>" />
		
		<p><%= submit_tag l(:button_save) %></p>
	</div>	

</div>


<% end %>
