<h2>New spent time query</h2>

<%= form_tag() do %>

<div class="box">
	<div class="tabular">
		<p>
			<label for="query_name">Name</label>
			<input id="query_name" name="query[name]" size="80" type="text" value="" />
		</p>
		
		<p>
			<label for="query_is_public">Public</label>
			<input name="query[is_public]" type="hidden" value="0" />
			<input id="query_is_public" name="query[is_public]" type="checkbox" value="1" />
		</p>
		
		<input name="query[value]" type="hidden" value="<%= URI.unescape(request.query_string) %>" />
		
		<p><%= submit_tag l(:button_save) %></p>
	</div>
	

</div>

<% end %>
